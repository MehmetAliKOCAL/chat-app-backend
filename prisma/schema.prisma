generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int    @id @default(autoincrement())
  name            String
  surname         String
  email           String @unique
  password        String
  profile_picture String @default("")
}

model Message {
  id        Int      @id @default(autoincrement())
  message   String
  from      String
  to        String
  seenBy    String[] @default([])
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
}